<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 基础应用主题 -->
    <style name="Theme.EinkCalendar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/dark_gray</item>
        <item name="colorOnPrimary">@color/primary_dark_light</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorSecondaryVariant">@color/medium_gray</item>
        <item name="colorOnSecondary">@color/secondary_dark_light</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- 字体和文本 -->
        <item name="android:fontFamily">@android:font/sans_serif</item>
        <item name="android:textColorPrimary">@color/primary_dark_light</item>
        <item name="android:textColorSecondary">@color/medium_gray</item>

        <!-- 禁用动画和过渡（墨水屏优化） -->
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:fragmentOpenEnterAnimation">@null</item>
        <item name="android:fragmentOpenExitAnimation">@null</item>
        <item name="android:fragmentCloseEnterAnimation">@null</item>
        <item name="android:fragmentCloseExitAnimation">@null</item>

        <!-- 其他属性 -->
        <item name="colorError">@color/color_error</item>
        <item name="android:windowBackground">@color/primary_light</item>
    </style>

    <!-- AppBar 风格 -->
    <style name="Theme.EinkCalendar.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!-- Popup 菜单风格 -->
    <style name="Theme.EinkCalendar.PopupOverlay" parent="ThemeOverlay.MaterialComponents">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!-- 深色主题 -->
    <style name="Theme.EinkCalendar.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/dark_gray</item>
        <item name="colorOnPrimary">@color/primary_dark_dark</item>

        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorSecondaryVariant">@color/dark_gray</item>
        <item name="colorOnSecondary">@color/secondary_dark_dark</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColorPrimary">@color/primary_dark_dark</item>
        <item name="android:textColorSecondary">@color/medium_gray</item>
        <item name="android:windowBackground">@color/primary_dark</item>
    </style>

    <!-- 文本风格 -->
    <style name="TextAppearance.EinkCalendar.Headline" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.EinkCalendar.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.EinkCalendar.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.EinkCalendar.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/android:textColorSecondary</item>
    </style>

    <!-- 按钮风格 -->
    <style name="Widget.EinkCalendar.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?attr/android:textColorPrimary</item>
        <item name="cornerRadius">4dp</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- 日期单元格风格 -->
    <style name="Widget.EinkCalendar.DateCell">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/light_gray</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- 事件项风格 -->
    <style name="Widget.EinkCalendar.EventItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginVertical">4dp</item>
        <item name="android:background">@drawable/event_item_background</item>
    </style>

</resources>
